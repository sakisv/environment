#
# Quick reference for screen commands:
# http://aperiodic.net/screen/quick_reference
#


# don't show the startup message
startup_message off

# number of scrollback lines
defscrollback 20000

# when you quit something like vim, clear it off the screen
altscreen on

# disable vbell (flashing screen)
vbell off

# some arcane language of screen to display a basic tabbar (http://superuser.com/a/181101/180367)
caption always "%{= kw}%-w%{= BW}%n %t%{-}%+w %-= @%H - %LD %d %LM - %c"
